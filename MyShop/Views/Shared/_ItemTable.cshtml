@model IEnumerable<Item>

    <div class="container">
        <h1>@ViewBag.CurrentViewName</h1>
        <table class='table table-striped'>
            <tr><th>Id</th><th>Name</th><th>Price</th><th>Description</th></tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-controller="Item"
                        asp-action="Details"
                        asp-route-id="@item.ItemId">@item.Name</a></td>
                    <td>@item.Price.ToString("0.00 NOK")</td>
                    <td>@item.Description</td>
                    <td></td>
                </tr>
            }
        </table>
        <p>
        <a class="btn btn-secondary">
            <a asp-controller="Item" 
            asp-action="Create">Create New</a>
    
    </p>
    </div>